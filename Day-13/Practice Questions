#1. Join patients and staff based on their common service field (show patient and staff who work in same service).
use hospital;
select p.patient_id, p.name as patient_name,p.service, s.staff_id, s.staff_name
from patients p 
join staff s
on 
p.service = s.service;

#2. Join services_weekly with staff to show weekly service data with staff information.
SELECT 
    w.week,
    w.service,
    w.patients_admitted,
    w.staff_morale,
    w.patient_satisfaction,
    s.staff_id,
    s.staff_name,
    s.role
FROM services_weekly w
JOIN staff s
    ON w.service = s.service;

#3. Create a report showing patient information along with staff assigned to their service.
select p.patient_id as patient_id, p.name as patient_name, p.age as age, p.service as service,
s.staff_id as staff_id, s.staff_name as staff_name, s.role
from patients p
join staff s 
on p.service = s.service;





